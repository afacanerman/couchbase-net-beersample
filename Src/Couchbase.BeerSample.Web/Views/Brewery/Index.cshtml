@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <p class="lead">
        <div class="row">
            <div class="col-md-12">
                <h2>Breweries</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul>
                    @foreach (var brewery in Model)
                    {
                        <li>@brewery.Name - @Html.ActionLink("View", "Details", new { brewery.Id }) | @Html.ActionLink("Edit", "Edit", new { brewery.Id }) | @Html.ActionLink("Remove", "Delete", new { brewery.Id })</li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    @using (Html.BeginForm("Create", "Brewery", FormMethod.Get))
                    {
                        <div class="col-md-12"><button type="submit" class="btn btn-default">Create</button></div>
                    }
                </div>
            </div>
        </div>
    </p>
</div>
